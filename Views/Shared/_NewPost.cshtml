@model QuickPropForum.Models.PostListingsModel

 <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
 <div class="form-group">
    <label asp-for="UserId" class="control-label"></label>
    <select id="post_UserId" asp-for="UserId" class="form-control" asp-items="Model.LstUsers"></select>
 </div>
 <div class="form-group">
    <label asp-for="PostContent" class="control-label"></label>
    <textarea id="post_PostContent" asp-for="PostContent" class="form-control"></textarea>
    <span asp-validation-for="PostContent" class="text-danger"></span>
 </div>         
       


